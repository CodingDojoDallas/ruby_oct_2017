<h1>New Post</h1>

<%= form_for(@posts) do |f| %>
    <div>
    <%= f.label:title %>
    <%= f.text_field:title%>
    </div>

    <div>
        <%= f.label :content %>
        <%= f.text_area :content %>
    </div>   

    <div>
        <%= f.submit  "Add" %>
    </div>   
<% end %>






