<h1>Student edit page</h1>


<h2>Edit Student</h2>
<div>
    <form action='<%= update_student_path @student.id %>' method='post'>
        <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
        <input type='hidden' name='_method' value='patch'>
        <div>
            <label>First Name:</label>
            <input type='text' name='student[first_name]' value='<%= @student.first_name %>'>
        </div>
        <div>
            <label>Last Name:</label>
            <input type='text' name='student[last_name]' value='<%= @student.last_name %>'>
        </div>
        <div>
            <label>Email:</label>
            <input type='email' name='student[email]' value='<%= @student.email %>'>
        </div>
        <input type='submit' value='Submit'>
    </form>
</div>