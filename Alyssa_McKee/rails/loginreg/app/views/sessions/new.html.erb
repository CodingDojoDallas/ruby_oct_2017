<div id="container">
	<form class="form" action="/session" method="POST">
		<h1>Login</h1>
		<input name="authenticity_token" value="<%=form_authenticity_token %>" type="hidden"/>
		<div>
			<label for="Email">Email:</label>
			<input type="email" name="session[email]" id="Email"/>
		</div>
		<div>
			<label for="Password">Password:</label>
			<input type="password" name="session[password]" id="Password"/>
		</div>
		<% if flash[:errors] %>
				<p class="error"><%= flash[:errors] %></p>
		<% end %>
		<button class="blue" type="Submit">Login</button>
		
	</form>
	
</div>
