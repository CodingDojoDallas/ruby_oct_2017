<h1>New Dojo</h1>
<ul>
	<% if flash[:notice] %>
		<% flash[:notice].each do |error| %>
			<li><%= error %></li>
		<% end %>
	<% end %>
</ul>

<form action="/dojos" method="POST">
	<input name="authenticity_token" value="<%=form_authenticity_token %>" type="hidden"/>
	<div>
		<label for="branch">Branch </label>
		<input type="text" name="dojos[branch]" id="branch"/>
	</div>
	<div>
		<label for="street">Street: </label>
		<input type="text" name="dojos[street]" id="street"/>
	</div>
	<div>
		<label for="city">City: </label>
		<input type="text" name="dojos[city]" id="city"/>
	</div>
	<div>
		<label for="state">State: </label>
		<input type="text" name="dojos[state]" id="state"/>
	</div>
	<button type="submit">Create</button>
</form>

<a href="<%= landing_path %>">Go Back</a>