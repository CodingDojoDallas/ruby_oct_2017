<h1>New Student</h1>
<% if flash[:notice] %>
		<% flash[:notice].each do |error| %>
			<li><%= error %></li>
		<% end %>
	<% end %>
<form action="/dojos/<%= @dojo.id %>/students" method="POST">
	<input name="authenticity_token" value="<%=form_authenticity_token %>" type="hidden"/>
	<div>
		<label for="first">First Name:</label>
		<input type="text" name="students[first_name]" id="first"/>
	</div>
	<div>
		<label for="last">Last Name:</label>
		<input type="text" name="students[last_name]" id="last"/>
	</div>
	<div>
		<label for="email">Email: </label>
		<input type="text" name="students[email]" id="email"/>
	</div>
	<div>
		<label for="dojo">Dojo</label>
		<select name="dojo_id" id="dojo">
			<% @alldojos.each do |place| %>
				<option value="<%= place.id %>" <% if @dojo.id == place.id %> selected <% end %>><%= place.branch %></option>
			<% end %>
		</select>
	</div>
	
	<button type="submit"> Add Student</button>
</form>